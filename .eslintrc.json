{
    "env": {
        "browser": true,
        "jquery": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    //"extends": "eslint:recommended",
    "globals": {
        "$p": true,
        "projekktorMessages": true,
        "projekktorConfig": true,
        "projekktorPersistentStorage": true,
        "projekktorPluginInterface": true,
        "projekktor": true,
        "playerModel": true,
        "Hls": true
    },
    "rules": {
        "no-caller": "error",
        "curly": ["error", "all"],
        //"eqeqeq": ["error", "always"],
        "guard-for-in": "error",
        "no-multi-spaces": "warn",
        "no-new-wrappers": "warn",
        "no-implicit-globals": "error",
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": [
            "warn",
            {
                "args": "none"
            }
        ],
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "semi": "error"
    }
}